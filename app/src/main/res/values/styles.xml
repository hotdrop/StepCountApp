<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="StepCounter">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Description">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Accuracy">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Accuracy.High">
        <item name="android:textColor">@color/accuracyHigh</item>
    </style>

    <style name="Accuracy.Medium">
        <item name="android:textColor">@color/accuracyMedium</item>
    </style>

    <style name="Accuracy.Low">
        <item name="android:textColor">@color/accuracyLow</item>
    </style>

    <style name="Accuracy.Unreliable">
        <item name="android:textColor">@color/accuracyUnreliable</item>
    </style>

    <style name="Accuracy.NoContact">
        <item name="android:textColor">@color/accuracyNoContact</item>
    </style>

    <style name="ChartTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="SettingRowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingRowSubTitle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
